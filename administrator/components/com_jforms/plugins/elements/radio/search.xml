<form>
	<name>Radio plugin search parameters</name>
	<params>
		<param name="keyword_mode" type="list" default="or" label="Keyword Mode" description="TEXTBOXKEYWORDMODEDESC">		
			<option value="Any">Any word</option>
			<option value="All">All words</option>
			<option value="Exact">Exact phrase</option>
		</param>
		<param name="keywords" type="text" size="25" default="" label="Keywords" description="TEXTBOXKEYWORDDESC" />
		<param name="mode" type="list" default="or" label="Mode" description="TEXTBOXMODEDESC">		
			<option value="or">Or</option>
			<option value="and">And</option>
		</param>
	</params>
</form>