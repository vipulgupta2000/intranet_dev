<form>
	<name>reCaptcha plugin parameters</name>
	<params>
		<param name="hash" class='id' description='JFORMSPLUGINFIELDID'  label="ID" type="text" valueType='string' default='' translate='0' />
		<param name="publickey" description='JFORMSRECAPTCHAPUBLIC' label='Public Key' type="text" valueType='string' default='' translate='0' />
		<param name="privatekey" description='JFORMSRECAPTCHAPRIVATE' label='Private Key' type="text" valueType='string' default=''  translate='0' />
		<param name="theme" type="list" description='JFORMSRECAPTCHATHEME' label="Theme" default='red' valueType='string' translate='0'>
			<option value='red'>Red</option>
			<option value='white'>White</option>
			<option value='blackglass'>Black Glass</option>
			<option value='clean'>Clean</option>
		</param>
		<param name="lang" type="list" description='JFORMSRECAPTCHALANGUAGE' label="Language" default='en' valueType='string' translate='1'>
			<option value='en'>English</option>
			<option value='nl'>Dutch</option>
			<option value='fr'>French</option>
			<option value='de'>German</option>
			<option value='pt'>Portuguese</option>
			<option value='ru'>Russian</option>
			<option value='es'>Spanish</option>
			<option value='tr'>Turkish</option>
			<option value='__'>Custom</option>
		</param>
		<param name="custom_lang" cols="25" rows="10" label="Custom Language" description='JFORMSRECAPTCHACUSTOMLANG' type="textarea" default='Get a visual challenge\nGet an audio challenge\nGet a new challenge\nType the two words:\nType what you hear:\nHelp\nPlay sound again\nDownload sound as MP3\nIncorrect. Try again.' valueType='string'  translate='1'></param>
	</params>
