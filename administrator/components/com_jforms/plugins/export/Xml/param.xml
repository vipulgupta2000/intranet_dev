<form>
	<name>HTML plugin parameters</name>
	<params>
		<param name="saveToDisk" type="list" default="0" label="Save to Disk" description="SAVETODISKDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="exportRange" type="list" default="visible" label="What to Export" description="EXPORTRANGE">
			<option value="visible">Export Visible Records</option>
			<option value="selected">Export Selected Records</option>
			<option value="pages">Export All Pages</option>
			<option value="all">Export All Records</option>
		</param>
		
		
		<!-- Hidden stuff [ Don't edit ] constant for all export plugins -->
		<param name="name" type="hidden" default="" />
		<param name="fid" type="hidden" default="" />
		<param name="keyword" type="hidden" default="" />
		<param name="fields" type="hidden" default="" />
		<param name="labels" type="hidden" default="" />
		<param name="start" type="hidden" default="" />
		<param name="rpp" type="hidden" default="" />
		<param name="page" type="hidden" default="" />
		<param name="pageCount" type="hidden" default="" />
		<param name="recordCount" type="hidden" default="" />
		<param name="ids" type="hidden" default="" />
		
	</params>
</form>